{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<h1>{{ website }}
		index</h1>


	<div class="flex justify-around flex-wrap mx-auto lg:w-1/1">
		{% for program in programs %}
			<div class="py-1 px-2  max-w-xs  mx-auto my-5 relative flip">
				<div class="bg-dark shadow-lg border-gray-100 flip-content border rounded-3xl  flex">
					<div class="flip-front relative">
						<div class="absolute top-0">
							<h2 class="text-2xl font-baloo text-grey-light px-5 pt-8">{{ loop.index }}
								/
								{{program.title}}</h2>
							<div class="flex items-center px-5">
								{% set i = program.note %}
								{% if i>0 %}
									{% for v in range (1, i) %}
										<img class="w-5 h-5 text-yellow" src="{{asset('build/images/star.svg')}}" alt="">

									{% endfor %}
								{% endif %}
								{% set k = 5 -program.note  %}
								{% if k > 0 %}
									{% for v in 1..k %}
										<img class="w-5 h-5 text-yellow" src="{{asset('build/images/grey-star.svg')}}" alt="">

									{% endfor %}
								{% endif %}
								<p class="ml-2 text-sm font-medium text-ligth-grey dark:text-gray-400">{{program.note}}
									/ 5</p>
							</div>
						</div>
						<img class="rounded-3xl shadow-lg" src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/1LRLLWGvs5sZdTzuMqLEahb88Pc.jpg" alt="">
					</div>
					<div class="flip-back">
						<div class="flex flex-col  space-y-4">
							<div class="flex justify-center">
								<div class="flex justify-between">
									{% set i = program.note %}
									{% if i>0 %}
										{% for v in 1..i %}
											<img class="w-5 h-5 text-yellow" src="{{asset('build/images/star.svg')}}" alt="">
										{% endfor %}
									{% endif %}
									{% set k = 5 -program.note  %}
									{% if k > 0 %}
										{% for v in 1..k %}
											<img class="w-5 h-5 text-yellow" src="{{asset('build/images/grey-star.svg')}}" alt="">
										{% endfor %}
									{% endif %}
									<p class="ml-2 text-sm font-medium text-ligth-grey dark:text-gray-400">{{program.note}}/5</p>
								</div>
							</div>
							<div>
								<div class="text-sm text-yellow">{{program.category.name}}</div>
								<div class="text-lg text-yellow">2019</div>
							</div>
							<button type="button" class="w-20 flex justify-around	 text-white bg-green hover:bg-teal-600 focus:ring-4 rounded-lg text-sm p-2.5 text-center inline-flex items-center mx-auto ">
								<img src="{{asset('build/images/add.svg')}}" alt="">
								<p class='ml-2'>Favoris</p>
							</button>
							<a href='{{path('program_show', {id: program.id} )}}' type="button" class="w-20 flex justify-around	 text-white bg-green hover:bg-teal-600 focus:ring-4 rounded-lg text-sm p-2.5 text-center inline-flex items-center mx-auto ">
								<img src="{{asset('build/images/loupe.svg')}}" alt="">
								<p class='ml-2'>Voir</p>
							</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}


	</div>
{% endblock %}
